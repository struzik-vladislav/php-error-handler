{
    "name": "struzik-vladislav/php-error-handler",
    "description": "Handling PHP errors (Notice, Warning, etc.)",
    "keywords": ["php", "error", "handler", "exception", "converter"],
    "license": "MIT",
    "authors": [
        {
            "name": "Vladislav Struzik",
            "email": "vladislav@struzik.blog"
        }
    ],
    "require": {
        "php": ">=5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "monolog/monolog": "~1.0"
    },
    "suggest": {
        "psr/log": "Allow sending errors in PSR-3 logger"
    },
    "autoload": {
        "psr-4": {
            "Struzik\\ErrorHandler\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Struzik\\ErrorHandler\\": "tests/"
        }
    }
}
